package com.camunda.dot.LogisticProcess;

import org.camunda.bpm.engine.delegate.DelegateExecution;
import org.camunda.bpm.engine.delegate.JavaDelegate;

public class CheckForAnomalies1 implements JavaDelegate {

	@Override
	public void execute(DelegateExecution execution) throws Exception {
		
		String city= (String) execution.getVariable("destinationCity");
		
		if(checkCity(city))
			execution.setVariable("anomalie1", false);
		else execution.setVariable("anomalie1", true);

	}

	public Boolean	checkCity(String city) {
		if (city=="Milano")
			return true;
		else return false;
	}
}
